{
    "name": "lara-press/larapress",
    "description": "The LaraPress framework. A Laravel-based framework for WordPress developers.",
    "keywords": [
        "larapress",
        "framework",
        "laravel",
        "WordPress"
    ],
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Jeff Berry",
            "email": "jeff@lara.press",
            "homepage": "http://lara.press"
        },
        {
            "name": "Nick Hough",
            "email": "nick@lara.press",
            "homepage": "http://lara.press"
        }
    ],
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.9",
        "johnpbloch/wordpress": "4.4.*",
        "lara-press/framework": "~0.1@dev"
    },
    "require-dev" : {
        "raveren/kint": "1.*",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "installer-paths": {
            "public/content/mu-plugins/{$name}/": ["larapress/framework"],
            "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/cms"
    }
}
