{
  "name": "lara-press/larapress",
  "description": "The LaraPress framework. A Laravel-based framework for WordPress developers.",
  "keywords": [
    "larapress",
    "framework",
    "laravel",
    "WordPress"
  ],
  "license": "GPL-2.0+",
  "type": "project",
  "authors": [
    {
      "name": "Jeff Berry",
      "email": "jeff@lara.press",
      "homepage": "http://lara.press"
    },
    {
      "name": "Nick Hough",
      "email": "nick@lara.press",
      "homepage": "http://lara.press"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "fideloper/proxy": "~3.3",
    "lara-press/framework": "5.5.*",
    "laravel/tinker": "~1.0",
    "guzzlehttp/guzzle": "~6.0",
    "johnpbloch/wordpress": "~4.8",
    "funkjedi/composer-include-files": "^1.0"
  },
  "require-dev": {
    "filp/whoops": "~2.0",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~6.0",
    "kint-php/kint": "1.*"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
      ]
    },
    "installer-paths": {
      "public/content/mu-plugins/{$name}/": [
        "larapress/framework"
      ],
      "public/content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/cms",
    "include_files": [
      "public/cms/wp-includes/l10n.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
