{
    "name": "lara-press/larapress",
    "description": "The LaraPress framework. A Laravel-based framework for WordPress developers.",
    "keywords": [ "larapress", "framework", "laravel", "WordPress"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Jeff Berry",
            "email": "jeff@lara.press",
            "homepage": "http://lara.press"
        },
        {
            "name": "Nick Hough",
            "email": "nick@lara.press",
            "homepage": "http://lara.press"
        }
    ],
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "johnpbloch/wordpress": "~4.8",
        "lara-press/framework": "5.4.*",
        "funkjedi/composer-include-files": "^1.0",
        "laravel/tinker": "^1.0"
    },
    "require-dev" : {
        "kint-php/kint": "1.*",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "installer-paths": {
            "public/content/mu-plugins/{$name}/": ["larapress/framework"],
            "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/cms",
        "include_files": [
            "public/cms/wp-includes/l10n.php"
        ]
    }
}
